<Project>
    <ItemGroup>
        <AdditionalFiles Include="$(MSBuildThisFileDirectory)/../content/**/*.table" Link="__Imports\XrmFramework\%(RecursiveDir)%(Filename)%(Extension)" />

        <Compile Remove="**\*.table" />
        <None Remove="**\*.table" />
        <AdditionalFiles Include="**/*.table" />
        <Compile Remove="Generated\**" />

        <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="3.1.24" />

        <PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
        <PackageReference Include="Microsoft.CrmSdk.XrmTooling.CoreAssembly" Version="9.1.0.108" />
    </ItemGroup>


    <PropertyGroup Condition="'$(XrmFrameworkShowGeneratedFiles)' == 'True'">
        <EmitCompilerGeneratedFiles>true</EmitCompilerGeneratedFiles>
        <CompilerGeneratedFilesOutputPath>Generated</CompilerGeneratedFilesOutputPath>
    </PropertyGroup>

    <ItemGroup Condition="'$(XrmFrameworkShowGeneratedFiles)' == 'True'">
        <None Include="Generated\**" />
    </ItemGroup>
</Project>